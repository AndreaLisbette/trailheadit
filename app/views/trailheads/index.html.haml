%div.col-md-12.headline.container
  %h1 Trailheads You've Photographed

%div.col-md-12.dashboard.container
  .row
    .col-md-4
      = link_to "Download OpenTrails Data (GeoJSON)", trailheads_path(format: :json), class: "btn btn-primary btn-block"
    .col-md-4      
      %div.btn.btn-primary.btn-block Share Trailheads with Park Agencies
    .col-md-4
      = link_to 'Document a new Trailhead', new_trailhead_path, class: "btn btn-primary btn-block"

%div.col-md-12.container-fix
  %div.col-md-4.column-header
    %h2.h3 Trailhead Photo
  %div.col-md-4.column-header
    %h2.h3 Location
  %div.col-md-4.column-header
    %h2.h3 Attributes

- @trailheads.each do |trailhead|
  %div.col-md-12.trailhead-box.container-fix
    %div.col-md-4.photo-box
      = image_tag (trailhead.photo.url(:thumb) || "trailheadit_hq.jpg"), class: "img-responsive"
    %div.col-md-4.location-box
      %ul
        %li
          - if trailhead.user
            = link_to trailhead.user.email, trailhead.user
        %li
          =trailhead.latitude
        %li
          =trailhead.longitude
        %li
          =trailhead.altitude
    %div.col-md-4.details-box
      %ul
        %li
          = trailhead.name
        %li
          - if trailhead.restrooms
            ="Restrooms available on site"
          - else
            ="No restrooms available here"
        %li
          - if trailhead.drinking_water
            ="There is drinking water on site"
          - else
            ="No drinking water is available here"
        %li
          - if trailhead.parking
            ="There is parking on site"
          - else
            ="No parking is available here"
        %li
          - if trailhead.kiosk
            ="There is trail information present on site"
          - else
            ="No information is available here"
        = link_to 'Edit', edit_trailhead_path(trailhead), class: "btn btn-primary btn-block"
    
        = link_to 'Delete', trailhead, :method => :delete, class: "btn btn-danger btn-block"
%br
