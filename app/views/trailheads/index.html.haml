- if @user
  %h4
    Taken by
    = @user

.row
  .col-xs-5.headline
    .header-button
      %h3= pluralize(@trailheads.count,'Trailhead')
  .col-xs-7.text-right
    .header-button
      = link_to trailheads_path(format: :json), class: "btn btn-primary" do
        &darr;&nbsp;
        Download OpenTrails

- @trailheads.each_slice(3) do |slice|
  .row    
    - slice.each do |trailhead|           
      .col-sm-4
        .trailhead-box 
          .lead.text-center= trailhead.display_name
          %hr
          .photo-box
            = image_tag (trailhead.photo.url(:small) || "trailheadit_hq.jpg"), class: "img-responsive"

          .trailhead-map(id="trailhead-map-#{trailhead.id}")
          :javascript
            var myMap = L.mapbox.map('trailhead-map-#{trailhead.id}', 'jerememonteau.holfp9ah')
            myMap.setView([#{trailhead.latitude}, #{trailhead.longitude}], 18);
            var marker = L.marker([#{trailhead.latitude}, #{trailhead.longitude}]).addTo(myMap);
          .text-muted.text-center
            = link_to trailhead.latlng, "http://maps.google.com?q=#{trailhead.latlng}", target: :blank
          %hr
          %ul
            %li
              %h4
                - if trailhead.restrooms
                  ="Restrooms available on site"
                - else
                  .no="No restrooms available here"
            %li
              %h4
                - if trailhead.drinking_water
                  ="There is drinking water on site"
                - else
                  .no="No drinking water is available here"
            %li
              %h4
                - if trailhead.parking
                  ="There is parking on site"
                - else
                  .no="No parking is available here"
            %li
              %h4
                - if trailhead.kiosk
                  ="There is trail information present on site"
                - else
                  .no="No information is available here"

          %hr
          .row
            .col-xs-6
              = link_to 'Edit', edit_trailhead_path(trailhead), class: "btn btn-primary btn-block"
            .col-xs-6
              = link_to 'Delete', trailhead, :method => :delete, class: "btn btn-danger btn-block"
          %hr
          .row
            .col-xs-6.text-caps
              - if trailhead.user
                By
                = link_to trailhead.user, trailhead.user
            .col-xs-6.text-right.text-caps
              = time_ago_in_words (trailhead.taken_at || trailhead.created_at)
              ago
          

  .row    
    .col-md-12
      %hr 

