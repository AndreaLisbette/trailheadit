.col-sm-4
  .trailhead-box 
    %h3.text-center= trailhead.display_name
    %hr
    .photo-box
      = link_to trailhead do
        = image_tag (trailhead.photo.url(:small) || "trailheadit_hq.jpg"), class: "img-responsive"

