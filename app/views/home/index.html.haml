- content_for :pre_container do
  .banner
    .container
      .welcome
        %h1.text-center
          Welcome to TrailEditor
        %h3.text-center
          The easiest way to create trailheads!

%br

.row
  .col-md-4    
    .white-box
      %h3
        Step 1
      %hr
      %h1
        Take a photo of a trailhead
      %h4     
        Use your smartphone or other GPS enabled device
  .col-md-4
    .white-box
      %h3
        Step 2
      %hr
      %h1
        Email it to new@traileditor.org
      %h4
        We'll convert the photo to a trailhead
  .col-md-4
    .white-box
      %h3
        Step 3
      %hr
      %h1
        Find it here and add details
      %h4
        So that others can find the trailhead too

%hr
.row
  .col-sm-12
    .landing.text-center
      %h2
        Latest Trailheads

%br
  
- Trailhead.latest.limit(3).each_slice(3) do |slice|
  .row    
    - slice.each do |trailhead|           
      = render "trailheads/trailhead_box", trailhead: trailhead          

.row
  .col-sm-12
    .landing.text-center
      %h2
      = link_to "More Trailheads", trailheads_path, class: "btn btn-lg btn-primary"

%br
%br
%hr.dark
.row
  .col-sm-12
    .landing.text-center
      %h3
        Hacked Together For
      %h2
        = link_to "The National Day of Civic Hacking 2014", "http://www.hackforchange.org"
      %br
      %h3 With Love From
      %br
.row
  .col-xs-4.col-sm-2.col-sm-offset-3
    = link_to "http://www.trailheadlabs.com" do
      = image_tag "thl_profile.png", class: "img-responsive"
  .col-xs-4.col-sm-2
    = link_to "http://www.codeforportland.org" do
      = image_tag "pdx_profile.png", class: "img-responsive"
  .col-xs-4.col-sm-2
    = link_to "http://www.codeforamerica.org" do
      = image_tag "cfa_profile.png", class: "img-responsive"

%br
%br